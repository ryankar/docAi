<div class="flex min-h-screen bg-gradient-to-br from-fuchsia-50 via-violet-50 to-white font-sans">
  <!-- Sidebar -->
  <aside class="w-64 bg-white shadow-lg">
    <div class="px-6 py-4">
      <h2 class="text-xl font-bold text-fuchsia-800">DocAI</h2>
    </div>
    <nav class="space-y-1 px-3 py-2">
      <a href="#" class="flex items-center px-4 py-2.5 text-fuchsia-700 bg-fuchsia-50 rounded-lg font-medium">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        Documents
      </a>
      <a href="#" class="flex items-center px-4 py-2.5 text-gray-600 hover:bg-fuchsia-50 hover:text-fuchsia-700 rounded-lg font-medium transition-colors">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
        </svg>
        Dashboard
      </a>
      <a href="#" class="flex items-center px-4 py-2.5 text-gray-600 hover:bg-fuchsia-50 hover:text-fuchsia-700 rounded-lg font-medium transition-colors">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        Settings
      </a>
    </nav>
  </aside>

  <!-- Main Content -->
  <div class="flex-1 px-6 py-8">
    <div class="max-w-4xl mx-auto space-y-8">
      <!-- Search Bar -->
      <div class="relative">
        <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>
        <input type="text" class="block w-full pl-10 pr-3 py-2.5 border border-fuchsia-200 rounded-lg bg-white focus:ring-2 focus:ring-fuchsia-500 focus:border-fuchsia-500" placeholder="Search documents...">
      </div>
      
      <!-- Header -->
      <header class="text-center">
        <h1 class="text-4xl font-bold text-fuchsia-900">Your Documents</h1>
        <p class="text-lg text-gray-600 mt-2">Access and manage your legal documents in one place</p>
        <%= link_to new_document_path, class: "inline-block mt-6 px-6 py-2.5 bg-gradient-to-r from-fuchsia-600 to-violet-600 text-white font-medium rounded-lg shadow-lg hover:from-fuchsia-500 hover:to-violet-500 transition-all duration-300 transform hover:scale-105" do %>
          Create New Document
        <% end %>
      </header>

      <!-- Filter Tags -->
      <div class="flex flex-wrap gap-2">
        <button class="px-4 py-1.5 bg-white border border-fuchsia-200 rounded-full text-fuchsia-700 text-sm font-medium hover:bg-fuchsia-50 transition">All Documents</button>
        <button class="px-4 py-1.5 bg-white border border-fuchsia-200 rounded-full text-gray-600 text-sm font-medium hover:bg-fuchsia-50 hover:text-fuchsia-700 transition">NDAs</button>
        <button class="px-4 py-1.5 bg-white border border-fuchsia-200 rounded-full text-gray-600 text-sm font-medium hover:bg-fuchsia-50 hover:text-fuchsia-700 transition">Contracts</button>
        <button class="px-4 py-1.5 bg-white border border-fuchsia-200 rounded-full text-gray-600 text-sm font-medium hover:bg-fuchsia-50 hover:text-fuchsia-700 transition">Recent</button>
      </div>

      <!-- Document List -->
      <section class="space-y-6">
        <h2 class="text-xl font-bold text-fuchsia-800 border-b border-fuchsia-200 pb-2">Document Library</h2>
        <% if @documents.any? %>
          <div class="grid md:grid-cols-2 gap-6">
            <% @documents.each do |document| %>
              <div class="bg-white p-6 rounded-xl shadow-lg hover:shadow-xl transition border border-fuchsia-100">
                <div class="flex items-start mb-4">
                  <!-- Document Icon -->
                  <div class="mr-4 p-2 bg-fuchsia-100 rounded-lg">
                    <svg class="w-8 h-8 text-fuchsia-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-lg font-bold text-gray-800"><%= document.title %></h3>
                    <div class="flex flex-wrap gap-2 mt-2">
                      <span class="px-3 py-1 bg-fuchsia-100 text-fuchsia-700 text-xs font-medium rounded-full">
                        <%= document.document_type %>
                      </span>
                      <% if document.respond_to?(:status) && document.status.present? %>
                        <span class="px-3 py-1 bg-emerald-100 text-emerald-700 text-xs font-medium rounded-full">
                          <%= document.status %>
                        </span>
                      <% end %>
                    </div>
                  </div>
                </div>
                <div class="flex items-center justify-between mt-4 pt-4 border-t border-fuchsia-100">
                  <p class="text-sm text-gray-500">Created <%= document.created_at.strftime("%B %d, %Y") %></p>
                  <%= link_to document_path(document), class: "px-4 py-1.5 bg-fuchsia-50 text-fuchsia-700 rounded-lg font-medium hover:bg-fuchsia-100 transition flex items-center" do %>
                    View
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                    </svg>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="bg-white p-10 rounded-xl shadow-lg text-center border border-fuchsia-100">
            <div class="mx-auto h-20 w-20 rounded-full bg-fuchsia-100 flex items-center justify-center mb-6">
              <svg class="h-10 w-10 text-fuchsia-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-800 mb-3">No documents yet</h3>
            <p class="text-gray-600 mb-6">Get started by creating your first document</p>
            <%= link_to new_document_path, class: "px-6 py-3 bg-gradient-to-r from-fuchsia-600 to-violet-600 text-white font-medium rounded-lg shadow-lg hover:from-fuchsia-500 hover:to-violet-500 transition-all duration-300 transform hover:scale-105" do %>
              Create Your First Document
            <% end %>
          </div>
        <% end %>
      </section>
    </div>
  </div>
</div>
