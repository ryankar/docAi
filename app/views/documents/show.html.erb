<div class="min-h-screen bg-gray-100 font-sans px-4 py-10">
  <div class="max-w-4xl mx-auto space-y-8">
    
    <!-- Header -->
    <header class="text-center">
      <h1 class="text-4xl font-bold text-gray-800"><%= @document.title %></h1>
      <p class="text-lg text-gray-500 mt-2">View and manage your document details</p>
    </header>

    <!-- Action Buttons -->
    <div class="flex flex-wrap justify-center gap-4 mt-6">
      <%= link_to download_document_path(@document), class: "px-5 py-2 bg-blue-600 text-white font-medium rounded-lg shadow hover:bg-blue-700 transition" do %>
        Download PDF
      <% end %>
      <%= link_to documents_path, class: "px-5 py-2 bg-gray-200 text-gray-700 font-medium rounded-lg shadow hover:bg-gray-300 transition" do %>
        Back to Documents
      <% end %>
    </div>

    <!-- Document Content -->
    <section class="flex flex-col lg:flex-row gap-8">
      <!-- Main Content -->
      <div class="flex-1 order-2 lg:order-1">
        <% if @document.content.present? %>
          <div class="bg-white rounded-xl shadow p-6">
            <div class="prose max-w-none">
              <%= simple_format(@document.content) %>
            </div>
          </div>
        <% else %>
          <div class="bg-white rounded-xl shadow p-8 text-center">
            <div class="py-10">
              <div class="mx-auto h-16 w-16 bg-blue-100 rounded-full flex items-center justify-center mb-4">
                <svg class="h-8 w-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
              <h3 class="mt-2 text-lg font-semibold text-gray-800">No content yet</h3>
              <p class="mt-1 text-gray-500">This document does not have any content.</p>
              <div class="mt-6">
                <%= link_to "#", class: "px-6 py-3 bg-blue-600 text-white font-medium rounded-lg shadow hover:bg-blue-700 transition" do %>
                  Generate content
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- Sidebar -->
      <div class="w-full lg:w-72 order-1 lg:order-2">
        <div class="bg-white rounded-xl shadow p-6">
          <h3 class="text-lg font-semibold text-gray-800 border-b pb-2 mb-4">Document Details</h3>
          
          <div class="space-y-4">
            <div>
              <p class="text-sm text-gray-500 font-medium">Type</p>
              <div class="mt-1 px-3 py-1 inline-flex items-center bg-blue-100 text-blue-700 text-sm font-medium rounded-full">
                <%= @document.document_type %>
              </div>
            </div>
            
            <div>
              <p class="text-sm text-gray-500 font-medium">Created</p>
              <p class="mt-1 text-gray-700">
                <%= @document.created_at.strftime("%B %d, %Y") %>
              </p>
            </div>
            
            <div>
              <p class="text-sm text-gray-500 font-medium">Last Updated</p>
              <p class="mt-1 text-gray-700">
                <%= @document.updated_at.strftime("%B %d, %Y") %>
              </p>
            </div>
          </div>

          <div class="mt-6 pt-4 border-t space-y-3">
            <%= link_to "#", class: "block w-full text-center px-5 py-2 bg-blue-600 text-white font-medium rounded-lg shadow hover:bg-blue-700 transition" do %>
              Edit Document
            <% end %>
            
            <%= link_to "#", class: "block w-full text-center px-5 py-2 bg-green-600 text-white font-medium rounded-lg shadow hover:bg-green-700 transition" do %>
              Share Document
            <% end %>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>
